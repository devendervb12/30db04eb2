	         <form:SimpleForm binding="{/company}"><!-- Element binding -->
	             <form:title>
	                 <core:Title text="Company Details"/>
	             </form:title>
	             
	             <form:content>
	                 <Label text="Name"/>
	                 <Text text="{name}"/>
